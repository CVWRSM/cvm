define DI_CVP_s {
    case MartoMay {
           condition  month >= MAR .and. month <= MAY 
           select     di
           from       wsi_di_cvp_s
           given      wsi=wsi_cvp_s 
           use        linear }      
                               
    case JuntoFeb { 
           condition  always 
           value      0 }                  
              }