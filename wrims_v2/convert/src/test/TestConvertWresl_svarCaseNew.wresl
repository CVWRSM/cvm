define frcst_sac {
       case Febfore {
           condition  month == FEB
           select     FEB
           from       sacramento_runoff_forecast
           where      wateryear=wateryear }
       case JuntoJan {
           condition  always
           value      0  }
       }
	   
define AmerFrcstInflow {
	case MAR_SEP {
                condition       month >= MAR .and. month <= SEP
                sum(i=-(month-MAY),SEP-month)  I_Folsm(i)*cfs_taf(i) + I300(i)*cfs_taf(i) }  ! sum of the may to sep inflow , changed to always be mar to may
	case other {
		condition		always
		value   		0.0   }
}	   