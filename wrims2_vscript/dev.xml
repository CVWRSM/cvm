<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="dev" name="Create Standalone Runnable Jar for WRIMSv2">

	<target name="dev" depends="Clean_files, Build_scripting_jar, Build_Info">

		<echo message="Finish dev" />
		
	</target>

	<target name="Clean_files" >
		<echo message="Cleaning files" />
		<delete file="lib/misc/*.jar"/>
		<!--  <delete dir="build"/>
		<mkdir dir="build"/> -->
	</target>

	<target name="Build_scripting_jar" >


		<echo message="Building wscripting.jar" />

		<jar destfile="lib/misc/wscripting.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Class-Path" value="."/>
			</manifest>
			<fileset dir="bin_dev">
				<include name="scripting/**/*.class"/>
				<exclude name="**/*.g"/>
			</fileset>
			<zipfileset excludes="META-INF/*.SF" src="../wrims_v2/wrims_v2/src/wrimsv2/lib/antlr-runtime-3.2.jar"/>
		</jar>
		
		<echo message="Finished Build_scripting_jar" />

	</target>
	
	<target name="Build_Info">
	    <tstamp>
	        <format property="builtat" pattern="MM/dd/yyyy hh:mm aa" timezone="America/Los_Angeles"/>
	    </tstamp>        
	    <exec executable="svnversion" outputproperty="svnversion"/>
	    <exec executable="whoami" outputproperty="whoami"/>
	   <!-- <exec executable="uname" outputproperty="buildsystem"><arg value="-a"/></exec> -->

	    <propertyfile file="build/version.props"
	        comment="This file is automatically generated - DO NOT EDIT">        
	        <entry key="buildtime" value="${builtat}"/>
	        <entry key="svn" value="${svnversion}"/>
	    	<!-- <entry key="builder" value="${whoami}"/> -->
	        <entry key="system" value="${buildsystem}"/>
	    </propertyfile>
		
		<echo message="SVN: ${svnversion}"/>
		
	</target>

</project>
